  <script>
    document.getElementById("attendanceFrm").addEventListener("submit", async function (e) {
  e.preventDefault(); // منع إعادة تحميل الصفحة

  const formData = new FormData(this);
  const data = Object.fromEntries(formData.entries()); // تحويل لـ Object

  try {
    const response = await fetch("/attendance/add", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(data),
    });

    const result = await response.text(); // استقبل الرد من السيرفر
    document.getElementById("result").innerText = result;
    document.getElementById("result").style.color = "green";

    this.reset(); // إعادة تعيين النموذج بعد الحفظ
  } catch (err) {
    console.error("Error:", err);
    document.getElementById("result").innerText = "فشل الحفظ ❌";
    document.getElementById("result").style.color = "red";
  }
});
