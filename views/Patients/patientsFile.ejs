  </head>
  <style>
    table[dir="rtl"] th, 
    table[dir="rtl"] td {
      text-align: right;
    }
     button.download-btn {
      background: #28a745;
      color: white;
      border: none;
      padding: 6px 10px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
    }
    button.download-btn:hover {
      background: #218838;
    }
    div.dataTables_wrapper {
      direction: rtl;
    }
  </style>
  <body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                   <div class="navbar nav_title" style="border: 0;">
         <a href="#" class="site_title"><img src="/assets/img/logos/center.png" alt="" srcset="" width="50" height="50"> <span><img src="/assets/img/logos/samaA.png" alt="" width="160" height="70"></span></a>
          </div>

          <div class="clearfix"></div>
          <br><br>

    
            <%- include('../nav/navUser') %>
            <br />

           

            <div class="right_col" role="main">
                <div class="">
                  <div class="page-title" dir="rtl">
                      <div class="title_right">
                      <h3 >عرض المرضى</h3>
                    </div>
                  </div>


            <div class="clearfix"></div>

          

           

              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>عرض المرضى </h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                  
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" dir="rtl">
                      <thead>
                        <tr>
                          <th>الاسم</th>
                          <th>نوع المعاينه</th>
                          <th>العمر</th>
                          <th>الجنس</th>
                          <th>رقم الهاتف</th>
                          <th>التاريخ</th>
                          <th>السعر</th>
                          <th>نحميل</th>
                        </tr>
                      </thead>


                      <tbody>
                        <% patients.forEach(patient => { %>
                          <tr>
                            <td><%= patient.fullname %></td>
                            <td><%= patient.exam_type %></td>
                            <td><%= patient.age %></td>
                            <td><%= patient.sex %></td>
                            <td><%= patient.phone %></td>
                            <td><%= patient.dates.toISOString().split('T')[0] %></td>
                            <td><%= patient.price %> ريال</td>
                            <td><button class="download-btn" data-id="<%= patient.id %>">تحميل الملف</button></td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>

             
        <!-- /page content -->

        <!-- footer content -->
        <%- include('../footer/footer') %>
        <!-- /footer content -->
      </div>
    </div>
                </div>
            </div></div></div>

