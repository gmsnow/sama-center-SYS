    <script>
      let deleteId = null;

// عند الضغط على زر الحذف
document.addEventListener("click", (e) => {
  if (e.target.classList.contains("delete-btn")) {
    e.preventDefault();
    deleteId = e.target.dataset.id;
    document.getElementById("deletePatientId").value = deleteId;

    // فتح المودال
    $("#confirmDeleteModal").modal("show");
  }
});
      // استدعاء جميع أزرار التعديل
      document.addEventListener('click', async (e) => {
  if (e.target.classList.contains('edit-btn')) {
    e.preventDefault();

    const id = e.target.dataset.id;

    // جلب بيانات المريض مباشرة من الـ API
    const res = await fetch(`/api/showPatient/${id}`);
    const patient = await res.json();

    if (patient) {
      document.getElementById('editPatientId').value = patient.id;
      document.getElementById('editFullname').value = patient.fullname;
      document.getElementById('editExamType').value = patient.exam_type;
      document.getElementById('editAge').value = patient.age;
      document.getElementById('editPhone').value = patient.phone;
      document.getElementById('editSex').value = patient.sex;
      document.getElementById('editDate').value = new Date(patient.dates).toISOString().split('T')[0];
      document.getElementById('editPrice').value = patient.age < 14 ? 1500 : 3000;

      // عرض المودال
      $('#editPatientModal').modal('show');
    }
  }
});
const form = document.getElementById("addPatientsForm");
  const msgBox = document.getElementById("messageBox");
  const msgText = document.getElementById("messageText");
  const closeBtn = document.getElementById("closeBtn");
  function showMessage(type, text) {
    msgBox.className = "message " + type; // success | error | warning
    msgText.textContent = text;
    msgBox.style.display = "block";
  
    // إخفاء بعد 4 ثواني
    setTimeout(() => {
      msgBox.style.display = "none";
    }, 4000);
  }
  
  closeBtn.addEventListener("click", () => {
    msgBox.style.display = "none";
  });
// إرسال التعديل (PUT request) — يتسجل مرة وحدة
document.getElementById('editPatientForm').addEventListener('submit', async (e) => {
  e.preventDefault();

  const id = document.getElementById('editPatientId').value;

  const updatedPatient = {
    fullname: document.getElementById('editFullname').value,
    exam_type: document.getElementById('editExamType').value,
    age: document.getElementById('editAge').value,
    phone: document.getElementById('editPhone').value,
    sex: document.getElementById('editSex').value,
    dates: document.getElementById('editDate').value,
    price: document.getElementById('editPrice').value
  };

  const res = await fetch(`/api/patients/${id}`, {
    method: 'PUT',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(updatedPatient)
  });
  const result = await res.json();
  if (res.ok) {
  showMessage("success", result.message);
  $('#editPatientModal').modal('hide');
  const row = document.querySelector(`button.edit-btn[data-id="${id}"]`).closest("tr");
  row.children[0].textContent = updatedPatient.fullname;
  row.children[1].textContent = updatedPatient.exam_type;
  row.children[2].textContent = updatedPatient.age;
  row.children[3].textContent = updatedPatient.phone;
  row.children[4].textContent = updatedPatient.dates;
  row.children[5].textContent = updatedPatient.price + " ريال";
} else {
  showMessage("error", result.message);
}
});
    

  const ageInput = document.getElementById('editAge');
  const priceInput = document.getElementById('editPrice');
  
  ageInput.addEventListener('input', () => {
    const age = parseInt(ageInput.value, 10);
    if (!isNaN(age)) {
      priceInput.value = age < 14 ? 1500 : 3000;
    } else {
      priceInput.value = '';
    }
  });
  document.getElementById("confirmDeleteBtn").addEventListener("click", async () => {
  const id = document.getElementById("deletePatientId").value;

  const res = await fetch(`/api/patients/${id}`, {
    method: "DELETE",
  });

  const result = await res.json();

  if (res.ok) {
    showMessage("success", result.message);

    // إزالة الصف من الجدول
    const row = document.querySelector(`button.delete-btn[data-id="${id}"]`).closest("tr");
    row.remove();

    // إغلاق المودال
    $("#confirmDeleteModal").modal("hide");
  } else {
    showMessage("error", result.message);
  }
});

    </script>
