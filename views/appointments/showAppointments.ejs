    <script>
  const msgBox = document.getElementById("messageBox");
  const msgText = document.getElementById("messageText");
  const closeBtn = document.getElementById("closeBtn");
  function showMessage(type, text) {
    msgBox.className = "message " + type; // success | error | warning
    msgText.textContent = text;
    msgBox.style.display = "block";
  
    // إخفاء بعد 4 ثواني
    setTimeout(() => {
      msgBox.style.display = "none";
    }, 4000);
  }
  
  closeBtn.addEventListener("click", () => {
    msgBox.style.display = "none";
  });
      // عند الضغط على زر التعديل
      document.addEventListener('click', async (e) => {
        if (e.target.classList.contains('edit-btn')) {
          e.preventDefault();
    
          const id = e.target.dataset.id;
    
          // جلب بيانات الموعد من الـ API
          const res = await fetch(`/api/appointments/${id}`);
          const appointment = await res.json();
    
          if (appointment) {
            // تعبئة الحقول في المودال
            document.getElementById('editAppointmentId').value = appointment.id;
            document.getElementById('editName').value = appointment.name;
            document.getElementById('editEmail').value = appointment.email;
            document.getElementById('editPhone').value = appointment.phone;
            document.getElementById('editDate').value = new Date(appointment.date).toISOString().split('T')[0];
            document.getElementById('editSpeacial').value = appointment.speacial;
            document.getElementById('editNotes').value = appointment.note;
    
            // عرض المودال
            $('#editAppointmentModal').modal('show');
          }
        }
      });
    
      // عند الضغط على حفظ التغييرات
      document.getElementById('editAppointmentForm').addEventListener('submit', async (e) => {
        e.preventDefault();
    
        const id = document.getElementById('editAppointmentId').value;
    
        const updatedAppointment = {
          name: document.getElementById('editName').value,
          email: document.getElementById('editEmail').value,
          phone: document.getElementById('editPhone').value,
          date: document.getElementById('editDate').value,
          speacial: document.getElementById('editSpeacial').value,
          notes: document.getElementById('editNotes').value
        };
    
        // إرسال التعديلات للسيرفر
        const res = await fetch(`/api/appointments/${id}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(updatedAppointment)
        });
    
        const result = await res.json();
    
        if (res.ok) {
          showMessage("success", result.message);
          $('#editAppointmentModal').modal('hide');
    
          // تحديث الصف مباشرة في الجدول بدون إعادة تحميل الصفحة
          const row = document.querySelector(`button.edit-btn[data-id="${id}"]`).closest("tr");
          row.children[0].textContent = updatedAppointment.name;
          row.children[1].textContent = updatedAppointment.email;
          row.children[2].textContent = updatedAppointment.phone;
          row.children[3].textContent = updatedAppointment.date;
          row.children[4].textContent = updatedAppointment.speacial;
          row.children[5].textContent = updatedAppointment.notes;
        } else {
          alert("خطأ: " + result.message);
        }
      });
      
      $(document).on("click", ".delete-btn", function () {
  const deleteId = $(this).data("id"); 
  $("#deletePatientId").val(deleteId);
  $("#confirmDeleteModal").modal("show");
});
// عند الضغط على زر الحذف
$("#confirmDeleteBtn").on("click", function () {
  const id = $("#deletePatientId").val();

  fetch(`/api/appointments/${id}`, {
    method: "DELETE",
  })
    .then((res) => res.json())
    .then((data) => {
      showMessage("success", data.message); // ✅ صح
      $("#confirmDeleteModal").modal("hide");

      // حذف الصف مباشرة من الجدول
      $(`.delete-btn[data-id="${id}"]`).closest("tr").remove();
    })
    .catch((err) => {
      console.error(err);
      showMessage("error", "حدث خطأ أثناء الحذف"); // ✅ مع نوع error
    });
});


$(document).on('click', '.complete-btn, .pending-btn, .notComplate-btn', function() {
  const id = $(this).data('id');
  let status = '';

  if ($(this).hasClass('complete-btn')) status = 'completed';
  else if ($(this).hasClass('pending-btn')) status = 'pending';
  else if ($(this).hasClass('notComplate-btn')) status = 'not_completed';

  const row = $(this).closest('tr');

  fetch(`/api/appointments/${id}/status`, {
    method: 'PUT',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ status })
  })
  .then(res => res.json())
  .then(data => {
    showMessage("success", data.message);

    // Remove any previous status classes
    row.removeClass('completed pending not_completed');

    // Add new class based on status
    row.addClass(status);
  })
  .catch(err => showMessage("error", "حدث خطأ في تحديث الحالة"));
});
    </script>
