    <script>
  const msgBox = document.getElementById("messageBox");
  const msgText = document.getElementById("messageText");
  const closeBtn = document.getElementById("closeBtn");
  function showMessage(type, text) {
    msgBox.className = "message " + type; // success | error | warning
    msgText.textContent = text;
    msgBox.style.display = "block";
  
    // إخفاء بعد 4 ثواني
    setTimeout(() => {
      msgBox.style.display = "none";
    }, 4000);
  }
  
  closeBtn.addEventListener("click", () => {
    msgBox.style.display = "none";
  });


$(document).on('click', '.complete-btn, .notComplate-btn', function() {
  const id = $(this).data('id');
  let status = '';

  if ($(this).hasClass('complete-btn')) status = 'completed';
  else if ($(this).hasClass('notComplate-btn')) status = 'not_completed';

  const row = $(this).closest('tr');

  fetch(`/api/appointments/${id}/status`, {
    method: 'PUT',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ status })
  })
  .then(res => res.json())
  .then(data => {
    showMessage("success", data.message);

    // Remove any previous status classes
    row.removeClass('completed pending not_completed');

    // Add new class based on status
    row.addClass(status);
  })
  .catch(err => showMessage("error", "حدث خطأ في تحديث الحالة"));
});
    </script>
    
