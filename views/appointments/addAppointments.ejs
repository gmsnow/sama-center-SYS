<script>
   const msgBox = document.getElementById("messageBox");
  const msgText = document.getElementById("messageText");
  const closeBtn = document.getElementById("closeBtn");
  document.addEventListener("DOMContentLoaded", () => {
  const form = document.getElementById("addAppointmentForm");
  const cancelBtn = document.getElementById("cancelBtn");

  // ÿπŸÜÿØ ÿßŸÑÿ•ŸÑÿ∫ÿßÿ°
  cancelBtn.addEventListener("click", () => {
    window.history.back(); // Ÿäÿ±ÿ¨ÿπ ŸÑŸÑÿµŸÅÿ≠ÿ© ÿßŸÑÿ≥ÿßÿ®ŸÇÿ©
  });

  // ÿπŸÜÿØ ÿßŸÑÿ≠ŸÅÿ∏
  form.addEventListener("submit", async (e) => {
    e.preventDefault(); // Ÿáÿ∞ÿß ŸäŸàŸÇŸÅ ÿßŸÑÿ±ŸäŸÑŸàÿØ üëç

    const formData = {
      name: form.name.value,
      email: form.email.value,
      phone: form.phone.value,
      date: form.date.value,
      speacial: form.speacial.value,
      note: form.note.value
    };

    try {
      const response = await fetch("/addAppointment", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData)
      });

      if (!response.ok) {
        throw new Error("ÿÆÿ∑ÿ£ ŸÅŸä ÿßŸÑÿßÿ™ÿµÿßŸÑ ÿ®ÿßŸÑÿ≥Ÿäÿ±ŸÅÿ±");
      }

      const result = await response.json();

      if (result.success) {
  showMessage("success", result.message || "ÿ™ŸÖ ÿ≠ŸÅÿ∏ ÿßŸÑŸÖŸàÿπÿØ ÿ®ŸÜÿ¨ÿßÿ≠!");
  form.reset();
} else {
  showMessage("error", result.message || "ÿ≠ÿØÿ´ ÿÆÿ∑ÿ£ ÿ£ÿ´ŸÜÿßÿ° ÿßŸÑÿ≠ŸÅÿ∏");
}
    } catch (err) {
      alert("‚ùå ÿÆÿ∑ÿ£: " + err.message);
    }
  });
});
function showMessage(type, text) {
  msgBox.className = "message " + type; // success | error | warning
  msgText.textContent = text;
  msgBox.style.display = "block";

  // ÿ•ÿÆŸÅÿßÿ° ÿ®ÿπÿØ 4 ÿ´ŸàÿßŸÜŸä
  setTimeout(() => {
    msgBox.style.display = "none";
  }, 4000);
}
  
  closeBtn.addEventListener("click", () => {
    msgBox.style.display = "none";
  });

  </script>
  <script>
    async function loadSpecialists() {
  try {
    const response = await fetch('/api/specialists');
    const specialists = await response.json();

    const select = document.getElementById('speacial');

    specialists.forEach(s => {
      const option = document.createElement('option');
      option.value = s.fullname;
      option.textContent = s.fullname;
      select.appendChild(option);
    });
  } catch (error) {
    console.error('Error loading specialists:', error);
  }
}

loadSpecialists();
