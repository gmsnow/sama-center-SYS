<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>General Assessment Form</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background: #f5f5f5;
        padding: 20px;
    }

    .form-container {
        max-width: 850px;
        margin: auto;
        background: #fff;
        padding: 40px 30px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        position: relative;
    }

    /* Logos */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    .logo-left, .logo-center {
        height: 60px;
    }

    /* Watermark */
    .watermark {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0.1;
        width: 400px;
        pointer-events: none;
        z-index: 0;
    }

    h4.title {
        text-align: center;
        margin-bottom: 15px;
        font-weight: bold;
        z-index: 1;
        position: relative;
    }

    /* Personal Info Box */
    .personal-info {
    border: 1px solid #000;
    border-radius: 10px;
    padding: 15px 20px;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 5px 10px;
    margin-bottom: 20px;
    font-size: 14px;
}
.personal-info .underline {
    flex: 1;
    border-bottom: 1px solid #000;
    height: 16px;
    display: flex;
    align-items: center;
    padding-left: 0; /* remove extra left space */
    justify-content: flex-start; /* align content to left */
}
.personal-info div {
    display: flex;
    align-items: center;
}

.personal-info label {
    font-weight: bold;
    margin-right: 5px;
    white-space: nowrap; /* Prevent line breaks */
}

/* Underlines with space inside text only */
.underline {
    flex: 1;
    border-bottom: 1px solid #000;
    height: 16px;
    padding: 0 5px;
    display: flex;
    align-items: center;
    overflow: hidden;           /* prevent overflowing */
    white-space: nowrap;        /* keep text in one line */
    text-overflow: ellipsis;    /* add ... if text is too long */
}
.underline.date {
    flex: 1.5; /* or set a fixed width, e.g., width: 120px; */
}
.personal-info .underline.phone {
    padding-left: -10px;
    justify-content: flex-start;
}
.underline.long {
    min-width: 200px;      /* longer underline for Name */
}



    /* Sections */
    .section {
        margin-bottom: 15px;
        font-size: 14px;
        z-index: 1;
        position: relative;
    }
    .section label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }
    .line {
        border-bottom: 1px solid #000;
        height: 18px;
        margin-bottom: 5px;
    }

    /* Treatment plan lines (more lines) */
    .treatment .line {
        height: 18px;
    }

    /* Doctor Signature */
    .signature {
        margin-top: 30px;
    }
    .signature .line {
        width: 200px;
    }

    /* Footer Icons */
    .footer {
        display: flex;
        gap: 20px;
        margin-top: 30px;
    }
    .footer img {
        width: 25px;
        height: 25px;
    }

    /* Bottom border */
    .bottom-border {
        margin-top: 20px;
        border-top: 2px solid #000;
    }
    @media print {
  body {
    background: #fff;
    padding: 0;
  }

  .form-container {
    box-shadow: none;
    margin: 0;
    padding: 20px;
    max-width: 100%;
  }

  .header, .footer {
    justify-content: space-between;
  }

  .footer img {
    width: 20px;
    height: 20px;
  }

  .watermark {
    opacity: 0.05;
    width: 300px;
  }

  .personal-info {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px 15px;
    font-size: 14px;
  }

  .personal-info .underline,
  .line {
    height: 16px;
    border-bottom: 1px solid #000;
  }

  .underline.long {
    width: 100%; /* Full width for Name */
  }

  .section label, .signature label {
    font-size: 14px;
  }

  button {
    display: none;
  }
}
</style>
</head>
<body>

<div class="form-container">
    <!-- Watermark -->
    <img src="/assets/img/logos/center.png" class="watermark" alt="Watermark">

    <!-- Header Logos -->
    <div class="header">
        <img src="/assets/img/logos/samaE.png" class="logo-left" alt="SAMA Logo">
        <img src="/assets/img/logos/center.png" class="logo-left" alt="SAMA Logo">

        <img src="/assets/img/logos/samaA.png" class="logo-center">
    </div>
<hr>
    <!-- Title -->
    <h4 class="title">استمارة التقييم العام</h4>

    <!-- Personal Info -->
    <% const patient = patients[0]; %>
    <div class="personal-info" dir="rtl">
        <div>
            <label>الاسم:</label>
            <span class="underline long"><%= patient.fullname %></span>
        </div>
        <div>
            <label>الجنس:</label>
            <span class="underline"><%= patient.sex %></span>
        </div>
        <div>
            <label>العمر:</label>
            <span class="underline" id="age"><%= patient.age %></span>
        </div>
        <div>
            <label>التاريخ:</label>
            <span class="underline date">
                <%= (() => {
                    const d = new Date(patient.dates);
                    const day = ("0" + d.getDate()).slice(-2);
                    const month = ("0" + (d.getMonth() + 1)).slice(-2);
                    const year = d.getFullYear();
                    return `${day}-${month}-${year}`;
                })() %>
            </span>
        </div>
        <div>
            <label>الهاتف:</label>
            <span class="underline phone"><%= patient.phone %></span>
        </div>
        <div>
            <label>نوع الفحص:</label>
            <span class="underline"><%= patient.exam_type %></span>
        </div>
        <div>
            <label>رقم المريض:</label>
            <span class="underline">[ <%= patient.id %> ]</span>
        </div>
    </div>
    <!-- Diagnosis -->
    <div class="section">
        <label>Diagnosis:</label>
        <div class="line"></div>
    </div>

    <!-- History -->
    <div class="section">
        <label>History:</label>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>

    <!-- Chief Complaint -->
    <div class="section">
        <label>Chief Complaint:</label>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>

    <!-- Notes -->
    <div class="section">
        <label>Notes:</label>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>

    <!-- Treatment Plan -->
    <div class="section treatment">
        <label>Treatment plan:</label>
        <div class="line"></div><div class="line"></div><div class="line"></div>
        <div class="line"></div><div class="line"></div><div class="line"></div>
        <div class="line"></div><div class="line"></div><div class="line"></div>
    </div>

    <!-- Doctor Signature -->
    <div class="signature">
        <label>Doctor Signature:</label>
        <div class="line"></div>
    </div>

    <div class="bottom-border"></div>
    <!-- Footer -->
    <div class="footer">
        <img src="/assets/img/mail.png" alt="Email">
        sama.center.pt@gmail.com
        <img src="/assets/img/telephone.png" alt="Phone">
        +967778199978
        +967736677739
        <img src="/assets/img/location.png" alt="Location">
        https://sama-center-website.netlify.app/
    </div>

</div>
<script>
    window.onload = function() {
      window.print();
    };
  </script>
</body>
</html>
