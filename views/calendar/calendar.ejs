        var eventTitle = document.getElementById('eventTitle');
        var eventDesc = document.getElementById('eventDesc');
        var saveEventBtn = document.getElementById('saveEvent');
      
        var calendar = new FullCalendar.Calendar(calendarEl, {
  initialView: 'dayGridMonth',
  locale: 'ar',
  firstDay: 0,
  headerToolbar: {
    left: 'prev,next today',
    center: 'title',
    right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
  },
  selectable: true,
  select: function(info) {
    // Save the start and end dates
    eventDate.value = info.startStr + " to " + info.endStr;
    eventTitle.value = "";
    eventDesc.value = "";
    // Show modal using Bootstrap 3
    $('#eventModal').modal('show');

    // Store the start/end in hidden inputs if needed
    eventDate.dataset.start = info.startStr;
    eventDate.dataset.end = info.endStr;
  }
});
      
        calendar.render();
      
        // Save event
        saveEventBtn.addEventListener('click', function () {
  var errorDiv = document.getElementById('titleError');

  if (eventTitle.value.trim() !== "") {
    var start = eventDate.dataset.start;
    var end = eventDate.dataset.end;

    // Add to calendar visually
    calendar.addEvent({
      title: eventTitle.value,
      start: start,
      end: end,
      description: eventDesc.value,
      allDay: true
    });

    // Send event to server
    $.ajax({
      url: '/events/add', // your backend route
      method: 'POST',
      data: {
        title: eventTitle.value,
        description: eventDesc.value,
        start: start,
        end: end
      },
      success: function(response) {
        console.log('Event saved:', response);
      },
      error: function(err) {
        console.error('Error saving event:', err);
      }
    });

    errorDiv.style.display = 'none';
    $('#eventModal').modal('hide');
  } else {
