    // عند فتح مودال التعديل
$('#datatable-buttons').on('click', '.edit-btn', function() {
    const row = $(this).closest('tr');
    
    const expenseDate = row.find('td:eq(2)').text(); // النص الموجود في الجدول
    
    // تحويل النص إلى صيغة YYYY-MM-DD
    const formattedDate = new Date(expenseDate).toISOString().split('T')[0];
    
    $('#editExpenseDate').val(formattedDate);
    
    $('#editExpenseModal').modal('show');
});
      // حفظ التعديلات
      $('#editExpenseForm').submit(function(e) {
        e.preventDefault();
        const id = $('#editExpenseId').val();
        const data = {
          category: $('#editExpenseModal [name="editCategory"]').val(),
          amount: $('#editExpenseModal [name="editAmount"]').val(),
          expense_date: $('#editExpenseModal [name="editExpenseDate"]').val(),
          payment_method: $('#editExpenseModal [name="editPaymentMethod"]').val(),
          notes: $('#editExpenseModal [name="editNotes"]').val()
        };
        console.log(data)
        fetch(`/Expenses/update/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        })
        .then(res => res.json())
        .then(result => {
          if(result.success) {
            showMessage("success", result.message);
            $('#editExpenseModal').modal('hide');
            setTimeout(() => {
              location.reload(); 
            }, 3000);
        }
          else showMessage("error", result.message);
        })
        .catch(err => console.error(err));
      });
    
      // فتح نافذة حذف
      $('#datatable-buttons').on('click', '.delete-btn', function() {
    const id = $(this).data('id');
    $('#deleteExpenseId').val(id); // مهم جداً
    $('#confirmDeleteModal').modal('show');
});
    
      // تأكيد الحذف
      $('#confirmDeleteBtn').click(function() {
        const id = $('#deleteExpenseId').val();
        console.log(id)
        fetch(`/Expenses/delete/${id}`, { method: 'DELETE' })
          .then(res => res.json())
          .then(result => {
            if(result.success) {
            showMessage("success", result.message);
            $('#confirmDeleteModal').modal('hide');
            setTimeout(() => {
              location.reload(); 
            }, 3000);
        }
          else showMessage("error", result.message);
        })
        .catch(err => console.error(err));
      });
    });
    </script>
