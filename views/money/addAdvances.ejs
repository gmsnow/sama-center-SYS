<script>
  const msgBox = document.getElementById("messageBox");
  const msgText = document.getElementById("messageText");
  const closeBtn = document.getElementById("closeBtn");
  document.getElementById("advancesForm").addEventListener("submit", async function(e) {
  e.preventDefault(); // منع إرسال الفورم بالطريقة التقليدية

  const form = e.target;
  const formData = new FormData(form);

  // تحويل البيانات إلى JSON
  const data = Object.fromEntries(formData.entries());

  try {
    const response = await fetch("/advances/add", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data)
    });
const result = await response.json();
    if (response.ok) {
       showMessage("success", result.message);
      form.reset();
    } else {
     showMessage("error", result.message);
    }
  } catch (err) {
    console.error(err);
    alert("⚠️ خطأ في الاتصال بالخادم");
  }
});
 function showMessage(type, text) {
    msgBox.className = "message " + type; // success | error | warning
    msgText.textContent = text;
    msgBox.style.display = "block";
  
    // إخفاء بعد 4 ثواني
    setTimeout(() => {
      msgBox.style.display = "none";
    }, 4000);
  }
  
  closeBtn.addEventListener("click", () => {
    msgBox.style.display = "none";
  });
  
</script>
<script>
    async function loadSpecialists() {
  try {
    const response = await fetch('/api/specialists');
    const specialists = await response.json();

    const select = document.getElementById('speacial');

    specialists.forEach(s => {
      const option = document.createElement('option');
      option.value = s.fullname;
      option.textContent = s.fullname;
      select.appendChild(option);
    });
  } catch (error) {
    console.error('Error loading specialists:', error);
  }
}

loadSpecialists();
  </script>
