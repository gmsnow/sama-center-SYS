    const id = $('#editAdvanceId').val();
    const data = {
      employee_name: $('#editAdvanceModal [name="employee_name"]').val(),
      specialty: $('#editAdvanceModal [name="specialty"]').val(),
      amount: $('#editAdvanceModal [name="amount"]').val(),
      advance_date: $('#editAdvanceModal [name="advance_date"]').val(),
      notes: $('#editAdvanceModal [name="notes"]').val()
    };
    fetch(`/advances/update/${id}`, {
